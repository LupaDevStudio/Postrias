#:kivy 2.1.0

<SettingsScreen>:

    # Back arrow
    ImageWithTextButton:
        source: PATH_IMAGES + "back_arrow.png"
        size_hint: None, 0.15
        pos_hint: {"x":0.025, "top": 1}
        allow_stretch: True
        width: self.height
        release_function: root.go_to_menu

    # Language
    Label:
        text: root.language_label
        bold: True
        pos_hint: {"center_x": 0.5, "y": 0.95}
        size_hint: 0.4, 0.05
        color: root.manager.color_label
        font_name: root.font
    FocusableSpinner:
        id: language_spinner
        text: root.default_language
        values: root.list_languages
        pos_hint: {"center_x": 0.5, "y": 0.9}
        size_hint: 0.4, 0.05
        font_name: root.font_name
        on_text:
            root.change_language()
