#: kivy 2.1.0
#: import PATH_IMAGES tools.path.PATH_IMAGES

<MenuScreen>:

    Label:
        id: title_label
        text: "Postrias"
        size_hint: 1, 0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.85}
        font_size: 60*root.font_ratio
        font_name: root.font
        color: root.manager.color_label

    Label:
        id: start_label
        text: "Start a new game" if root.mobile_mode else "Click to start a new game"
        size_hint: 1, 0.25
        pos_hint: {"center_x": 0.5, "center_y": 0.45}
        font_size: 40*root.font_ratio
        font_name: root.font
        color: root.manager.color_label
    Button:
        size_hint: 1, 0.25
        pos_hint: {"center_x": 0.5, "center_y": 0.45}
        background_color: 0, 0, 0, 0
        on_release:
            root.manager.current = "game"

    Image:
        id: settings_logo
        source: PATH_IMAGES + "settings_logo.png"
        size_hint: None, 0.15
        pos_hint: {"right": 0.95, "y": 0.05}
        allow_stretch: True
        width: self.height
    Button:
        id: settings_button
        size_hint: None, 0.15
        pos_hint: {"right": 0.95, "y": 0.05}
        background_color: (0, 0, 0, 0)
        width: self.height
        on_release:
            root.manager.current = "settings"

    # Label:
    #     id: high_score_label
    #     text: root.high_score
    #     bold: True
    #     color: root.manager.color_label
    #     pos_hint: {"right":1, "y":0}
    #     size_hint: 0.2, 0.1
    #     font_name: root.font
    #     font_size: 30*root.font_ratio

    Image:
        source: PATH_IMAGES + "collection_logo.png"
        size_hint: None, 0.15
        pos_hint: {"x": 0.05, "y": 0.05}
        allow_stretch: True
        width: self.height
    Button:
        size_hint: None, 0.15
        pos_hint: {"x": 0.05, "y": 0.05}
        background_color: (0, 0, 0, 0)
        width: self.height
        on_release:
            root.manager.current = "collection"
