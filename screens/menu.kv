#:kivy 2.1.0
#: import PATH_IMAGES tools.path.PATH_IMAGES
#: import TITLE_FONT_COLOR tools.constants.TITLE_FONT_COLOR
#: import MOBILE_MODE tools.constants.MOBILE_MODE
#:set side_logo_size 0.2

<MenuScreen>:

    Label:
        # canvas.before:
        #     Color:
        #         rgba: (1,1,1,1)
        #     Rectangle:
        #         size: self.size
        #         pos: self.pos
        id: title_label
        text: "Postrias"
        size_hint: 0.5, 0.2
        pos_hint: {"center_x": 0.5, "center_y": 0.85}
        font_size: 80*root.font_ratio
        font_name: root.font_name
        color: TITLE_FONT_COLOR
        outline_width: 2
        outline_color: (1,1,1,1)

    Label:
        id: start_label
        text: root.start_label_text
        size_hint: 1, 0.25
        pos_hint: {"center_x": 0.5, "center_y": 0.45}
        font_size: 50*root.font_ratio
        font_name: root.font_name
        color: TITLE_FONT_COLOR
        outline_width: 2
        outline_color: (1,1,1,1)
    Button:
        size_hint: 1, 0.25
        pos_hint: {"center_x": 0.5, "center_y": 0.45}
        background_color: 0, 0, 0, 0
        on_release:
            root.manager.current = "game"

    Image:
        id: settings_logo
        source: PATH_IMAGES + "settings_logo.png"
        size_hint: None, side_logo_size
        pos_hint: {"right": 0.95, "y": 0.05}
        allow_stretch: True
        width: self.height
    Button:
        id: settings_button
        size_hint: None, side_logo_size
        pos_hint: {"right": 0.95, "y": 0.05}
        background_color: (0, 0, 0, 0)
        width: self.height
        on_release:
            root.manager.current = "settings"

    # Label:
    #     id: high_score_label
    #     text: root.high_score
    #     bold: True
    #     color: TITLE_FONT_COLOR
    #     pos_hint: {"right":1, "y":0}
    #     size_hint: 0.2, 0.1
    #     font_name: root.font_name
    #     font_size: 30*root.font_ratio

    Image:
        source: PATH_IMAGES + "achievements_logo.png"
        size_hint: None, side_logo_size
        pos_hint: {"x": 0.05, "y": 0.05}
        allow_stretch: True
        width: self.height
    Button:
        size_hint: None,side_logo_size
        pos_hint: {"x": 0.05, "y": 0.05}
        background_color: (0, 0, 0, 0)
        width: self.height
        on_release:
            root.manager.current = "achievements"
