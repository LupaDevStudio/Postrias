#:kivy 2.1.0

<ImageWithTextButton>:
    Label:
        id: text_widget
        text: root.text
        size: root.size
        pos: root.pos
        shorten: False
        text_size: (root.width*root.text_filling_ratio,None)
        color: root.text_color
        font_name: root.text_font_name
        font_size: root.text_font_size * root.parent.font_ratio
        halign: root.text_halign
        valign: root.text_valign
    Button:
        id: button_widget
        size: root.size
        pos: (root.x, root.y +100)
        background_color: (1, 0, 0, 1)
        on_release: root.release_function()
